<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="all" name="ConsultComm">
  <property name="src" value="./"/>

  <target depends="compile" name="all"/>

  <target name="init">
    <tstamp/>
  </target>

  <target depends="init" name="compile">
    <javac deprecation="on" optimize="on" srcdir="${src}">
      <classpath>
        <pathelement location="skinlf.jar"/>
        <pathelement location="jhbasic.jar"/>
        <pathelement location="nativeskin.jar"/>
      </classpath>
    </javac>
    <jar destfile="CsltComm.jar">
      <fileset dir="${src}">
        <include name="*.class"/>
        <include name="CHANGES"/>
        <include name="AUTHORS"/>
        <include name="COPYING"/>
        <include name="README"/>
        <include name="graphics/*.gif"/>
        <include name="graphics/*.png"/>
        <include name="help/*"/>
        <exclude name="help/CVS"/>
        <exclude name="help/*~"/>
      </fileset>
      <manifest>
        <attribute name="Main-Class" value="CsltComm"/>
        <attribute name="Class-Path" value="skinlf.jar jhbasic.jar tray.jar"/>
      </manifest>
    </jar>
    <mkdir dir="${src}/plugins"/>
  </target>

  <target depends="compile" name="dryrun">
    <java classname="CsltComm" fork="yes">
      <jvmarg value="-Djava.library.path=syslibs"/> 
    </java>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="${src}" includes="*.class"/>
    </delete>
  </target>

  <target depends="clean" name="realclean">
    <delete>
      <fileset dir="${src}" includes="**/*~" defaultexcludes="no"/>
      <fileset dir="${src}" includes="CsltComm.jar"/>
      <fileset dir="${src}" includes="plugins/*.jar"/>
    </delete>
  </target>
</project>
