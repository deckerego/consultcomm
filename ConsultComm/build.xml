<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="all" name="ConsultComm">
  <property name="src" value="./"/>

  <target depends="compile" name="all"/>

  <target name="init">
    <tstamp/>
  </target>

  <target depends="init" name="compile">
    <javac deprecation="on" optimize="on" srcdir="${src}">
      <classpath>
        <pathelement location="${src}"/>
      </classpath>
    </javac>
  </target>

  <target depends="all" name="dist">
    <jar jarfile="CsltComm.jar" manifest="CsltMfst">
      <fileset dir="${src}" includes="*.class"/>
      <fileset dir="${src}" includes="graphics/*.gif"/>
    </jar>
  </target>

  <target depends="dist" name="upgrade">
    <copy file="CsltComm.jar" todir="${user.home}/ConsultComm"/>
  </target>

  <target depends="init" name="dryrun">
    <javac srcdir="${src}">
      <classpath>
        <pathelement location="${src}"/>
      </classpath>
    </javac>
    <java classname="CsltComm" fork="true">
      <classpath>
        <pathelement location="${src}"/>
      </classpath>
    </java>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="${src}" includes="*.class"/>
    </delete>
  </target>

  <target depends="clean" name="realclean">
    <delete file="CsltComm.jar"/>
  </target>
</project>
